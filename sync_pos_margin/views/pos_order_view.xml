<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_pos_pos_inherited_form" model="ir.ui.view">
        <field name="name">pos.order.view.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']/tree//field[@name='price_unit']" position="after">
                <field name="purchase_price" groups="sync_pos_margin.group_pos_margin"/>
                <field name="margin" groups="sync_pos_margin.group_pos_margin"/>
            </xpath>
            <xpath expr="//field[@name='lines']/form//field[@name='price_unit']" position="after">
                <field name="purchase_price" groups="sync_pos_margin.group_pos_margin"/>
                <field name="margin" groups="sync_pos_margin.group_pos_margin"/>
            </xpath>
            <field name="amount_total" position="after">
                <field name="total_margin" groups="sync_pos_margin.group_pos_margin"/>
            </field>
        </field>
    </record>

</odoo>