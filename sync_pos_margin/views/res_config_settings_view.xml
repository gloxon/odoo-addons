<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field name="name">point_of_sale.res.config.settings.view.form.inheritpoint_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="o_settings_use_payment_terminals" position="after">
                <h2>POS Margin</h2>
                <div class="row mt16 o_settings_container" id="pos_margin_setting">
                    <div class="col-12 col-lg-6 o_setting_box" id="pos_margin_menu">
                        <div class="o_setting_left_pane">
                            <field name="group_pos_margin"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_pos_margin"/>
                            <div class="text-muted">
                                Set margin per product.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>